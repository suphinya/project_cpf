
<div class="item-container">
    <div class="title-department">
        <%= link_to current_user.department1 ,  dashboard_path(current_user.department1), :class => "title-department-tag"  %>
        <p>00:00-09:00
    </div>
    <div class="percent-container">
    <p> <%=  @now1.to_s + ' / ' + @plan1.to_s %> </p>
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: <%= @per1%>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    </div>
    <div class="actual-btn">
        <%= link_to ('<i class="fa fa-clock-o" aria-hidden="true" style="font-size:1.5em"></i>').html_safe,  dashboard_path(current_user.department1)  %>
       
    </div>
    <div class="plan-btn">
        <%= link_to ('<i class="fa fa-pencil" aria-hidden="true" style="font-size:1.5em"></i>').html_safe,  edit_dashboard_path(current_user.department1)  %>
    </div>
</div>

