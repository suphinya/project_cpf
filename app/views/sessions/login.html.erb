<div class="container">
	<div class='login'>
		<img class="avatar" src="/assets/avatar.svg" >
		<%= form_tag('/login', {:class => 'login_form'}) do %>
			<h2>Welcome</h2>
			<div class="input-div one focus">
			<h5 class="attr">Username</h5>
			<%= text_field_tag :username, "", :class => "input-login" %><br>
			</div>
			<div class="input-div two focus">
			<h5 class="attr">Password</h5>
			<%= password_field_tag :password ,"", :class => "input-login" %><br>
			</div>
			<%= submit_tag "LOGIN", :class => "login-btn" %>
		<% end %>
	</div>
</div>
